@model IEnumerable<Translator.Models.Calls>

@{
    ViewData["Title"] = "Call Log";
}

<h1>Call Log</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

@using (Html.BeginForm())
{
    <p>
        Search records: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink("Id", "Index", new { sortOrder = ViewBag.IdSortParm })
            </th>
            <th>
                @Html.ActionLink("Original Text", "Index", new { sortOrder = ViewBag.OriginalTextSortParm })
            </th>
            <th>
                @Html.ActionLink("Translator URL", "Index", new { sortOrder = ViewBag.TranslatorTypeSortParm })
            </th>
            <th>
                @Html.ActionLink("Successful?", "Index", new { sortOrder = ViewBag.IsSuccessfulSortParm })
            </th>
            <th>
                @Html.ActionLink("Translated Text", "Index", new { sortOrder = ViewBag.TranslatedTextSortParm })
            </th>
            <th>
                @Html.ActionLink("Date Created", "Index", new { sortOrder = ViewBag.DateCreatedSortParm })
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OriginalText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TranslatorType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsSuccessful)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TranslatedText)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
